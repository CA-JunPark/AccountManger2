<PW>:
    GridLayout:
        cols: 1
        size_hint: 0.9, 0.9
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Image:
            source: "security icons.png"

        Label:
            text: "Please Enter Your Password"
            font_size: 30
            color: 0, 1, 0.8, 1  
            
        TextInput:
            id: user_input
            multiline: False
            font_size: 30
            size_hint: 1, 0.3
            halign: 'center'
            password: True
            padding:[0,12,0,0]
            on_text_validate: root.enter(self)

        Button:
            text: "Enter"
            size_hint: 0.3, 0.3
            size: self.texture_size
            bold: True
            background_color: 0, 1, 0.8, 1  
            font_size: 30
            on_press: root.enter(user_input)
            
        Label:
            id: void
            text: 
            font_size: 30
        Label:
            id: void
            text: 
            font_size: 30
<Main>:
    GridLayout:
        cols: 1
        size_hint: 0.9, 0.95
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        spacing: 40

        Label:
            text: "Temp"
            font_size: 30
            color: 0, 1, 0.8, 1  
            
        ScrollView:
            id: accountsScrollView
            do_scroll_x: False
            size_hint: 0.8, None
            size: root.width, root.height
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            
            GridLayout:
                id: accountsGridLayout
                cols: 1
                spacing: 10
                size_hint_y: None
                height: self.minimum_height

                Button:
                    id: exampleAccount
                    text: "Example"
                    size: 1, 1
                    size_hint_y:None
                    height: 40
                    font_size: 30
                    background_color: 0, 1, 0.8, 1  
                