<ImageButton@ButtonBehavior+Image>

<PW>:
    GridLayout:
        cols: 1
        size_hint: 0.9, 0.9
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Image:
            source: "security icons.png"

        Label:
            text: "Please Enter Your Password"
            font_size: 30
            color: 0, 1, 0.8, 1  
            
        TextInput:
            id: user_input
            multiline: False
            font_size: 30
            size_hint: 1, 0.3
            halign: 'center'
            password: True
            padding:[0,dp(12),0,0]
            on_text_validate: root.pwEnter(self)

        Button:
            text: "Enter"
            size_hint: 0.3, 0.3
            size: self.texture_size
            bold: True
            background_color: 0, 1, 0.8, 1  
            font_size: 30
            on_press: root.pwEnter(user_input)
            
        Label:
            id: void
            text: 
            font_size: 30
        Label:
            id: void
            text: 
            font_size: 30
    
<Main>:
    GridLayout:
        cols: 1
        size_hint: 1, 0.98
        spacing: [0, dp(20)]

        GridLayout:
            rows:1
            
            ImageButton:
                source: 'settings.png'
                size_hint: None, None
                size: dp(50), dp(50)
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: root.on_setting_press(self)
                
            Label:
                text: "Search By"
                font_size: dp(15)
                text_size: None, dp(50)
                size_hint_y: None
                height: dp(50)
                padding: 0,0,0,dp(12)
                size: self.texture_size
            
            Spinner:
                id: spinner
                text: 'option'
                font_size: 30
                values: ['A', 'Option 2', 'Option 3']
                text_size: None, dp(50)
                size_hint_y: None
                size: self.texture_size
                height: dp(30)
                padding: 0,0,0,dp(12)
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_text: root.on_spinner_press(self)

            Widget: # Blank
                size_hint_x: None
                width: dp(10)

            TextInput:
                id: searchInput
                multiline: False
                font_size: 30
                size_hint_y: None
                height: dp(50)
                padding: [dp(5),dp(12),0,0]
                on_text_validate: root.searchEnter(self)

            ImageButton:
                source: 'search.png'
                size_hint: None, None
                size: dp(50), dp(50)
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: root.searchEnter(searchInput)   
        
        ScrollView:
            GridLayout:
                id: accounts
                cols: 1
                spacing : dp(10)
                size_hint_y: None
                height: root.height

                Button:
                    text: "A"

                